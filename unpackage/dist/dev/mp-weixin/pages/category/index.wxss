.content {
  height: calc(100vh - 104px);
}
.content .search {
  padding: 10px;
  background: #ffffff;
}
.content .commodity {
  display: flex;
}
.content .commodity .menu {
  min-width: 110px;
  height: calc(100vh - 158px);
  background: #ffffff;
}
.content .commodity .menu .each {
  height: 50px;
  display: flex;
  align-items: center;
}
.content .commodity .menu .each .left {
  height: 30px;
  width: 4px;
  background: #ffffff;
}
.content .commodity .menu .each .right {
  color: black;
  margin-left: 20px;
}
.content .commodity .menu .selected {
  color: #1296db;
  background: #f2f2f2;
}
.content .commodity .menu .selected .left {
  background: #1296db;
}
.content .commodity .menu .selected .right {
  color: #1296db;
}
.content .commodity .list {
  height: calc(100vh - 158px);
  padding: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  overflow-y: auto;
}
.content .commodity .list .every {
  width: 137px;
  height: 230px;
  margin-bottom: 10px;
  border-radius: 5px;
  background: #ffffff;
}
.content .commodity .list .every .name {
  padding: 0 10px;
  font-size: 14px;
}
.content .commodity .list .every .desc {
  padding: 0 10px;
  margin: 5px 0;
  color: #999;
  font-size: 12px;
}
.content .commodity .list .every .buy {
  padding: 0 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.content .commodity .list .every .commImage {
  width: 130px;
  height: 160px;
}
.content .commodity .list .every:last-child {
  margin-bottom: 20px;
}

